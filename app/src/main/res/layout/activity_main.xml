<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/background">

    <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="U B E R"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.060000002"
            android:id="@+id/uber_tv"/>

    <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="PARTNER"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/partener_tv" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/uber_tv" app:layout_constraintVertical_bias="0.0"/>

    <Button android:layout_width="0dp" android:layout_height="wrap_content"
            android:id="@+id/sign_in_btn"
            android:text="sign in"
            android:textColor="@android:color/white"
            android:background="#4dd0e1"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/register_btn"
            android:layout_marginEnd="8dp"/>


    <Button android:layout_width="0dp" android:layout_height="wrap_content"
            android:id="@+id/register_btn"
            android:text="register"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintStart_toEndOf="@+id/sign_in_btn" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginStart="8dp"/>


</android.support.constraint.ConstraintLayout>